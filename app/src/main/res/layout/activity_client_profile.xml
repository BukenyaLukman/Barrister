<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientProfileActivity"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_layout_main"
        android:id="@+id/client_profile_app_bar"></include>

    <EditText
        android:id="@+id/client_profile_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_below="@+id/my_profile_app_bar"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        android:background="@drawable/inputs_background"/>

    <EditText
        android:id="@+id/client_profile_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        android:background="@drawable/inputs_background"/>

    <EditText
        android:id="@+id/client_profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        android:background="@drawable/inputs_background"/>


    <EditText
        android:id="@+id/client_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@+id/profile_website"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        android:background="@drawable/inputs_background"/>
    <EditText
        android:id="@+id/client_profile"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="About Me"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:gravity="left"
        android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/client_profile_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_below="@+id/profile_biography"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"/>


</LinearLayout>