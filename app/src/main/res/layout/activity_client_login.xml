<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientLoginActivity">

    <ImageView
        android:id="@+id/client_barrister_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/court48"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/client_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/client_barrister_logo"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:hint="Email or Username"
        android:background="@drawable/inputs_background"/>
    <EditText
        android:id="@+id/client_password_input_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="18sp"
        android:padding="20dp"
        android:inputType="textPassword"
        android:layout_below="@+id/client_email_input"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/inputs_background"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/client_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_below="@+id/client_password_input_login"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/client_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Login"
        android:textAllCaps="false"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/client_forget_password"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/client_need_new_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Need New Account?"
        android:layout_below="@+id/client_login_btn"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>


</RelativeLayout>