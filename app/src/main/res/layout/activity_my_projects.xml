<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Attorney.MyProjectsActivity"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_layout_main"
        android:id="@+id/my_projects_app_bar"></include>

    <TextView
        android:id="@+id/title_area_of_law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area of Law"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/area_of_law_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Area Of Law"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/inputs_background"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/title_area_of_practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area of Practice"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/area_of_practice_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Area Of Practice"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/inputs_background"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/title_city_of_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/city_of_operation_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select City"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/inputs_background"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/search_projects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPLOAD"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"/>
</LinearLayout>