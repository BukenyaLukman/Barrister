            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".SavedAttorneyActivity"
            android:parentActivityName=".ClientHomeActivity" />
        <activity
            android:name=".NotificationsActivity"
            android:parentActivityName=".ClientHomeActivity" />
        <activity
            android:name=".SearchAttorneyActivity"
            android:parentActivityName=".ClientHomeActivity" />
        <activity
            android:name=".ClientProfileActivity"
            android:parentActivityName=".ClientHomeActivity" />
        <activity
            android:name=".ClientPostProjectActivity"
            android:parentActivityName=".ClientHomeActivity" />
        <activity
            android:name=".ClientHomeActivity"
            android:label="@string/title_activity_client_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ClientLoginActivity" />
        <activity android:name=".Attorney.AttorneyLoginActivity" />
        <activity
