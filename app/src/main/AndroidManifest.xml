            android:parentActivityName=".Attorney.AttorneyHomeActivity" />
        <activity
            android:name=".Attorney.AttorneyHomeActivity"
            android:label="@string/title_activity_attorney_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Attorney.MyNotificationsActivity"
            android:parentActivityName=".Attorney.AttorneyHomeActivity" />
        <activity
            android:name=".Attorney.MyApplicationsActivity"
            android:parentActivityName=".Attorney.AttorneyHomeActivity" />
        <activity
            android:name=".Attorney.MyProjectsActivity"
            android:parentActivityName=".Attorney.AttorneyHomeActivity" />
        <activity
            android:name=".Attorney.MyProfileActivity"
            android:parentActivityName=".Attorney.AttorneyHomeActivity" />
        <activity android:name=".ClientRegisterActivity" />
        <activity android:name=".Attorney.AttorneyRegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>